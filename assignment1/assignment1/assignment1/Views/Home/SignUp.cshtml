<p class="text-danger">
    @Html.ValidationSummary()
</p>


<h2>SignUp</h2>
<form method="post" action="">
    <input type="text" value="@Model.Name" placeholder="Name" class="form-control" name="Name" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Name")</span>
    <input type="text" value="@Model.Username" placeholder="Username" class="form-control" name="Username" />
    <br />
    <span class="text-danger">@Html.ValidationMessage("Username")</span>
    <input type="text" name="Id" placeholder="ID" class="form-control" />
    <span class="text-danger">@Html.ValidationMessage("Id")</span>
    <input type="text" name="Email" placeholder="Email" class="form-control " />
    <br />
    <input type="submit" value="SignUp" class="btn btn-danger" />
</form>

