
@{
    ViewBag.Title = "Education";
}

<main>
    <ul class="nav bg-black bg-opacity-25">
        <li class="nav-item">
            <a class="nav-link " href="../Home/Index">Index</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="../Home/Education">Education</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="../Home/Personal">Personal</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="../Home/Projects">Projects</a>
        </li>
        <li class="nav-item">
            <a class="nav-link " href="../Home/References">References</a>
        </li>
    </ul>
    <section class="row" aria-labelledby="aspnetTitle">
        <h1 id="title">Education</h1>
    </section>
    <div>
        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Degree</th>
                    <th scope="col">Year</th>
                    <th scope="col">Institution</th>
                </tr>
            </thead>
            <tbody>
                @{  
                    var curr = 1;
                    foreach (var i in ViewBag.student.Educations)
                        {
                         <tr>
                            <th scope="row">@curr</th>
                            <td>@i.Degree</td>
                            <td>@i.PassingYear</td>
                            <td>@i.Institution</td>
                         </tr>
                            curr++;
                        }
                }

            </tbody>
        </table>
    </div>


</main>

