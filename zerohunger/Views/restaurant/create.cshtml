
@{
    ViewBag.Title = "create";
}

<div class="container mt-auto">
    <div class="row justify-content-center">
        <div class="col-md-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Request Pickup</h4>
                </div>
                <div class="card-body">
                    <form action="" method="POST">
                        <div class="form-group">
                            <label for="weight">Weight</label>
                            <input type="number" step="0.01" value="@Model.weight
                                   " class="form-control" id="weight" name="weight" required>
                        </div>
                        <div class="form-group">
                            <label for="validity">Validity</label>
                            <input type="date" class="form-control" value="@Model.validity" id="validity" name="validity" required>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


