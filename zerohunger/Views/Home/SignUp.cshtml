
@{
    ViewBag.Title = "SignUp";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-auto">
            <div class="card">
                <div class="card-header">
                    <h4 class="text-center">Signup</h4>
                </div>
                <div class="card-body">
                    <form action="" method="POST">
                        <div class="form-group ">
                            <label for="Name">Name</label>
                            <input type="text" value="@Model.Name" class="form-control" id="name" name="Name" required>
                        </div>
                        <div class="form-group">
                            <label for="Email">Email</label>
                            <input type="email" value="@Model.Email" class="form-control" id="email" name="Email" required>
                        </div>
                        <div class="form-group">
                            <label for="Password">Password</label>
                            <input type="password" value="@Model.Password" class="form-control" id="password" name="Password" required>
                        </div>
                        <div class="form-group">
                            <label for="Role">Role</label>
                            <select class="form-control" value="@Model.Role" id="role" name="Role">
                                <option value="collector">collector</option>
                                <option value="restaurant">restaurant</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <label for="Location">Location</label>
                            <input type="text" class="form-control" value="@Model.Location" id="location" name="Location">
                        </div>
                        <br />
                        @if(Model.msg != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @Model.msg
                            </div>
                        }
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Signup</button>
                        </div>

                        <div>Already had an account?
                            <a href="../Home/Login">SignIn</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


